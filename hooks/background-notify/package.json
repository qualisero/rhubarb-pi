{
  "name": "@rhubarb-pi/background-notify",
  "version": "1.0.0",
  "description": "Pi extension that notifies you when long-running tasks complete while your terminal is in the background",
  "main": "index.js",
  "scripts": {
    "install:global": "mkdir -p ~/.pi/agent/extensions && ln -sf \"$(pwd)/index.js\" ~/.pi/agent/extensions/background-notify.js && echo 'Symlinked to ~/.pi/agent/extensions/background-notify.js'",
    "install:project": "mkdir -p .pi/extensions && ln -sf \"$(pwd)/index.js\" .pi/extensions/background-notify.js && echo 'Symlinked to .pi/extensions/background-notify.js'",
    "uninstall:global": "rm -f ~/.pi/agent/extensions/background-notify.ts && rm -rf ~/.pi/agent/extensions/background-notify && echo 'Uninstalled from ~/.pi/agent/extensions/'",
    "uninstall:project": "rm -f .pi/extensions/background-notify.ts && echo 'Uninstalled from .pi/extensions/'"
  },
  "keywords": [
    "pi",
    "extension",
    "notification",
    "background",
    "terminal"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
