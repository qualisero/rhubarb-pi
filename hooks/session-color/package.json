{
  "name": "@rhubarb-pi/session-color",
  "version": "1.0.0",
  "description": "Pi hook that displays a colored band in the footer to distinguish sessions",
  "main": "index.ts",
  "scripts": {
    "install:global": "mkdir -p ~/.pi/agent/hooks && cp index.ts ~/.pi/agent/hooks/session-color.ts && echo 'Installed to ~/.pi/agent/hooks/session-color.ts'",
    "install:project": "mkdir -p .pi/hooks && cp index.ts .pi/hooks/session-color.ts && echo 'Installed to .pi/hooks/session-color.ts'",
    "uninstall:global": "rm -f ~/.pi/agent/hooks/session-color.ts && echo 'Uninstalled from ~/.pi/agent/hooks/'",
    "uninstall:project": "rm -f .pi/hooks/session-color.ts && echo 'Uninstalled from .pi/hooks/'"
  },
  "keywords": [
    "pi",
    "hook",
    "color",
    "session"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
