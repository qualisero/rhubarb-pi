{
  "name": "rhubarb-pi",
  "version": "1.4.0",
  "description": "A collection of small hooks and extensions for Pi agent",
  "keywords": [
    "pi",
    "pi-coding-agent",
    "hooks",
    "extensions",
    "productivity"
  ],
  "author": "Dave",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qualisero/rhubarb-pi"
  },
  "bugs": {
    "url": "https://github.com/qualisero/rhubarb-pi/issues"
  },
  "homepage": "https://github.com/qualisero/rhubarb-pi#readme",
  "scripts": {
    "install:all": "npm run install:all-hooks && npm run install:all-extensions",
    "install:all-hooks": "npm run install:background-notify && npm run install:session-emoji && npm run install:session-color",
    "install:all-extensions": "npm run install:safe-git",
    "install:background-notify": "cd hooks/background-notify && npm run install:global",
    "install:session-emoji": "cd hooks/session-emoji && npm run install:global",
    "install:session-color": "cd hooks/session-color && npm run install:global",
    "install:safe-git": "cd extensions/safe-git && npm run install:global",
    "uninstall:all": "npm run uninstall:all-hooks && npm run uninstall:all-extensions",
    "uninstall:all-hooks": "npm run uninstall:background-notify && npm run uninstall:session-emoji && npm run uninstall:session-color",
    "uninstall:all-extensions": "npm run uninstall:safe-git",
    "uninstall:background-notify": "cd hooks/background-notify && npm run uninstall:global",
    "uninstall:session-emoji": "cd hooks/session-emoji && npm run uninstall:global",
    "uninstall:session-color": "cd hooks/session-color && npm run uninstall:global",
    "uninstall:safe-git": "cd extensions/safe-git && npm run uninstall:global",
    "typecheck": "tsc --noEmit",
    "verify": "./verify.sh"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": ">=0.30.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
